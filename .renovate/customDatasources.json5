{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  customDatasources: {
    "servarr-stable": {
      defaultRegistryUrlTemplate:
        "https://{{packageName}}.servarr.com/v1/update/master/changes?os=linux&runtime=netcore",
      format: "json",
      transformTemplates: [
        '{"releases":[{"version": $[0].version}]}',
      ],
    },
  },
}
